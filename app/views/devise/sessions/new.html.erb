<section id="container">
  <div class="form-container">
    <div class="info">
      <h1>Welcome back!</h1>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.input :remember_me, as: :boolean, class: "form-check-input" if devise_mapping.rememberable? %>
      </div>

      <div class="upload-button">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
